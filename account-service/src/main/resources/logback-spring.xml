<configuration>

  <springProperty name="SERVICE_NAME" source="spring.application.name" defaultValue="unknown"/>
  <property name="ENV" value="${ENV:dev}"/>

  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <!-- единый читабельный формат для консоли -->
      <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSX} %-5level service=%property{SERVICE_NAME:-${SERVICE_NAME}} env=${ENV} trace.id=%X{traceId:-} span.id=%X{spanId:-} logger=%logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="${LOG_LEVEL_ROOT:INFO}">
    <appender-ref ref="CONSOLE"/>
  </root>

</configuration>